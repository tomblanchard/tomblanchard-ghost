<!doctype html>
<html lang="{{ lang }}">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>{{ meta_title }}</title>

    {{# is "post" }}
      <link rel="stylesheet" href="{{ asset 'prism-okaidia.min.css' }}" />
    {{/ is }}

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Slab|Space+Mono" />
    <link rel="stylesheet" href="{{ asset 'index.css' }}" />

    {{ ghost_head }}
  </head>

  <body class="{{ body_class }}">
    {{> "header" }}

    <main>
      {{{ body }}}
    </main>

    {{ ghost_foot }}

    {{# is "post" }}
      <script src="{{ asset 'prism.min.js' }}"></script>
    {{/ is }}
  </body>
</html>
